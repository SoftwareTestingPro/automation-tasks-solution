<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Suite" parallel="false" verbose="1">

  <!-- Register your Extent Reports listener -->
  <listeners>
    <listener class-name="com.qa.listeners.TestListener"/>
  </listeners>

  <!-- Define your test structure -->
  <test name="Automations Tests">
    <classes>
      <!-- Add your test classes here -->
      <class name="com.qa.tests.Home"/>
      <class name="com.qa.tests.Beginner"/>
      <class name="com.qa.tests.Intermediate"/>
      <class name="com.qa.tests.Advanced"/>
    </classes>
  </test>
</suite>